<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.tafreshiali.composecanvasplayground.presentation.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_basicDraggableComponentFragment"
            app:destination="@id/basicDraggableComponentFragment" />
        <action
            android:id="@+id/action_homeFragment_to_draggableCircularSliderComponentFragment"
            app:destination="@id/draggableCircularSliderComponentFragment" />
        <action
            android:id="@+id/action_homeFragment_to_selectableFilledPieChartComponentFragment"
            app:destination="@id/selectableFilledPieChartComponentFragment" />
    </fragment>

    <fragment
        android:id="@+id/basicDraggableComponentFragment"
        android:name="com.tafreshiali.composecanvasplayground.presentation.BasicDraggableComponentFragment"
        android:label="BasicDraggableComponentFragment" />

    <fragment
        android:id="@+id/draggableCircularSliderComponentFragment"
        android:name="com.tafreshiali.composecanvasplayground.presentation.DraggableCircularSliderComponentFragment"
        android:label="DraggableCircularSliderComponentFragment" />

    <fragment
        android:id="@+id/selectableFilledPieChartComponentFragment"
        android:name="com.tafreshiali.composecanvasplayground.presentation.SelectableFilledPieChartComponentFragment"
        android:label="SelectableFilledPieChartComponentFragment" />

</navigation>